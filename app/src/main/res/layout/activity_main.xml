<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_main_buttom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RadioButton
            android:id="@+id/rb_main_message"
            android:text="@string/bt_message"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/main_bottom_bg_selector"
            android:textColor="@color/main_buttom_textcolor_selector"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rb_main_setting"
            android:text="@string/bt_setting"
            android:button="@null"
            android:gravity="center"
            android:background="@drawable/main_bottom_bg_selector"
            android:textColor="@color/main_buttom_textcolor_selector"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>



    </RadioGroup>



</LinearLayout>
